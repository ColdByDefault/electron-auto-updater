{
  "name": "minimal-electron-test",
  "version": "0.1.0",
  "description": "beta version reeed Docs-Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "publish": "electron-builder --win --publish always"
  },
  "devDependencies": {
    "electron": "24.8.8",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.coldbydefault.reeed",
    "productName": "Reeed",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico",
      "publish": ["github"]
    },
    "publish": {
      "provider": "github",
      "owner": "ColdByDefault",
      "repo": "reeed"
    }
  }
}
